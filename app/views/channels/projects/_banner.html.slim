sass:
  #buttons
    position: absolute
    z-index: 100
    width: 700px
    margin: 0 auto
    right: 240px
    left: 0px
    margin-top: 280px
    .btn_explore
      display: inline-block
      width: 180px
      background: #6BB544
      border: solid 1px #578A3F
      height: 30px
      text-transform: uppercase
      color: white !important
      text-decoration: none !important
      text-shadow: 1px 1px #4C8132
      font-family: "Lato"
      font-weight: bold
      font-size: 15px
      border-radius: 15px
      float: left
      margin-right: 5px
      text-align: center
      &.start
        background: #6BB544
        padding-top: 16px
        height: 32px
